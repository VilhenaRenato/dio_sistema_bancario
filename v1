menu="""

[d] Depositar
[s] Sacar
[e] Extrato
[q] Sair

=> """

saldo=0
limite= 500
extrato=""
numero_saques = 0
LIMITE_SAQUES = 3

while True:

    opcao = input(menu)

    if opcao == "d":
        print("Deposito")
        deposito=float(input("Digite o valor do depósito: "))
        if deposito>0:
            saldo+=deposito
            extrato+="Depósito + R$ "+(f'{deposito:.2f}\n')
            print(f"Depósito de R$ {deposito:.2f} realizado com sucesso!")
        else:
            print("Operação inválida, o valor não pode ser menor que R$ 0.01, voltando ao menu principal!")


    elif opcao == "s":
        print("Saque")
        if saldo <=0:
            print("Saldo Insuficiente! Voltando ao menu principal!")
        else:
            if numero_saques >= LIMITE_SAQUES:
                print("Limite de saques diários atingindo, favor tente novamente amanhã!")
            else:
                saque=float(input("Digite o valor do Saque: "))
                if saque<=0 or saque > limite:
                    print("Operação inválida, o valor não pode ser menor que R$ 0.01 e nem maior que R$ 500.00, voltando ao menu principal!")
                else:
                    if saldo<saque:
                        print("Saldo Insuficiente! Voltando ao menu principal!")
                    else:
                        saldo-=saque
                        extrato+="Saque - R$ "+(f'{saque:.2f}\n')
                        numero_saques+=1
                        print(f"Saque de R$ {saque:.2f} realizado com sucesso!")

    elif opcao == "e":
        print("\n===========Extrato===========")
        print("Não foram realizadas movimentações." if not extrato else extrato)
        print(f"\nSaldo = RS {saldo:.2f}")
        print("==============================")

    elif opcao == "q":
        print("\n"+"Obrigado por usar nosso sistema bancário"+"\n")
        break

    else:
        print("Operação inválida, por favor selecione novamente a operação desejada.")
